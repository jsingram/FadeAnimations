<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.ingramintegrations.fadeanimations.MainActivity">

    <RadioButton
        android:id="@+id/act_main_rdb_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/act_main_bt_fade_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="RadioButton"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/act_main_bt_fade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Fade In"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="180dp" />

    <ImageView
        android:id="@+id/act_main_imv_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/act_main_rdb_radioButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

</RelativeLayout>
